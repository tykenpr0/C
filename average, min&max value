#include <stdio.h>

int main(){
        int i=0,ILE;
        float max,min,n,sum=0;
        puts("podaj liczbe argumentow");
        scanf("%d",&ILE);

        while(i<ILE){
                puts("podaj liczbe calkowita");
                scanf("%f",&n);
                        sum+=n;
                if(i==0){
                   max=n;
                        min=n;
                        }
                        if(max<n)
                                max=n;
                                else if(min>n)
                                min=n;
        i++;
        }
printf("suma wynosi: %f \t srednia wynosi: %f \n",sum,(sum/ILE));
printf("max=%f\t min=%f\n",max,min);
return 0;
