#include <stdio.h>

int main(){
        int n,i,j;
        do {
        puts("Podaj liczbe calkowita z przedzialu 1:10");
        scanf("%d",&n);
        }
        while(n<1 || n>10);
{
        for(i=1;i<=n;++i){
                puts("");
                        for(j=1;j<=i;++j){
                                printf("%d",j);
                        }
        }
}
        puts("");
        i=j=1;
while(i<=n){
        puts("");
        j=1;
        while(j<=i)
        printf("%d",j++);
        i++;
        }
        puts("");
return 0;
}
